<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Responsive Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            min-height: 100vh;
        }

        .sidebar {


            height: 100vh;
            /* ensures it spans full viewport height */
            overflow-y: auto;
            /* allows scrolling inside if content is long */
            background-color: #343a40;

        }

        .sidebar a {
            color: white;
            text-decoration: none;
        }

        .sidebar .nav-link:hover {
            background-color: #495057;
        }

        @media (max-width: 991.98px) {
            .sidebar {
                display: none;
            }
        }

        .sidebar.show {
            display: block !important;
        }
    </style>
</head>

<body>



    <div class="container-fluid">
        <div class=" row">


            <!-- Sidebar -->
            <div class="col-lg-3 col-xl-2 px-0 sidebar sticky-top d-lg-block" id="sidebarMenu">
                <div class="d-flex flex-column p-3">
                    <ul class="nav nav-pills flex-column mb-auto">

                        <!-- Dashboard -->
                        <li>
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="collapse"
                                href="#dashboardMenu" role="button">
                                Dashboard
                            </a>
                            <div class="collapse" id="dashboardMenu">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ps-3">
                                    <li><a href="#" class="nav-link text-white">Overview</a></li>
                                    <li><a href="#" class="nav-link text-white">Analytics</a></li>
                                    <li><a href="#" class="nav-link text-white">Performance</a></li>
                                </ul>
                            </div>
                        </li>

                        <!-- Users -->
                        <li>
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="collapse" href="#usersMenu"
                                role="button">
                                Users
                            </a>
                            <div class="collapse" id="usersMenu">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ps-3">
                                    <li><a href="#" class="nav-link text-white">All Users</a></li>
                                    <li><a href="#" class="nav-link text-white">Add New</a></li>
                                    <li><a href="#" class="nav-link text-white">Roles & Permissions</a></li>
                                </ul>
                            </div>
                        </li>

                        <!-- Orders -->
                        <li>
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="collapse" href="#ordersMenu"
                                role="button">
                                Orders
                            </a>
                            <div class="collapse" id="ordersMenu">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ps-3">
                                    <li><a href="#" class="nav-link text-white">New Orders</a></li>
                                    <li><a href="#" class="nav-link text-white">Processing</a></li>
                                    <li><a href="#" class="nav-link text-white">Completed</a></li>
                                </ul>
                            </div>
                        </li>

                        <!-- Products -->
                        <li>
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="collapse"
                                href="#productsMenu" role="button">
                                Products
                            </a>
                            <div class="collapse" id="productsMenu">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ps-3">
                                    <li><a href="#" class="nav-link text-white">All Products</a></li>
                                    <li><a href="#" class="nav-link text-white">Add Product</a></li>
                                    <li><a href="#" class="nav-link text-white">Categories</a></li>
                                    <li><a href="#" class="nav-link text-white">Inventory</a></li>
                                </ul>
                            </div>
                        </li>

                        <!-- Reports -->
                        <li>
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="collapse" href="#reportsMenu"
                                role="button">
                                Reports
                            </a>
                            <div class="collapse" id="reportsMenu">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ps-3">
                                    <li><a href="#" class="nav-link text-white">Sales</a></li>
                                    <li><a href="#" class="nav-link text-white">Users</a></li>
                                    <li><a href="#" class="nav-link text-white">Products</a></li>
                                </ul>
                            </div>
                        </li>

                        <!-- Settings -->
                        <li>
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="collapse"
                                href="#settingsMenu" role="button">
                                Settings
                            </a>
                            <div class="collapse" id="settingsMenu">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ps-3">
                                    <li><a href="#" class="nav-link text-white">General</a></li>
                                    <li><a href="#" class="nav-link text-white">Security</a></li>
                                    <li><a href="#" class="nav-link text-white">Notifications</a></li>
                                </ul>
                            </div>
                        </li>

                        <!-- Help -->
                        <li>
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="collapse" href="#helpMenu"
                                role="button">
                                Help
                            </a>
                            <div class="collapse" id="helpMenu">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small ps-3">
                                    <li><a href="#" class="nav-link text-white">FAQ</a></li>
                                    <li><a href="#" class="nav-link text-white">Support</a></li>
                                    <li><a href="#" class="nav-link text-white">Contact</a></li>
                                </ul>
                            </div>
                        </li>

                    </ul>
                </div>
            </div>

            <!-- Main Content -->
            <main class="col-lg-9 col-xl-10 ms-sm-auto px-4 py-4">
                <div class="container mt-5">
                    <form action="/users/customer-profile" method="POST">
                        <!-- SECTION 1: Company Profile -->
                        <h4 class="text-primary mb-3">ðŸ§¾ Company Information</h4>

                        <div class="mb-3">
                            <label class="form-label">Company Name</label>
                            <input type="text" class="form-control" name="companyName" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Website URL</label>
                            <input type="url" class="form-control" name="websiteUrl">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" name="description" rows="2"></textarea>
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <label class="form-label">Industry</label>
                                <input type="text" class="form-control" name="industry">
                            </div>
                            <div class="col">
                                <label class="form-label">Target Market</label>
                                <input type="text" class="form-control" name="targetMarket">
                            </div>
                        </div>

                        <h5 class="mt-4">Social Media</h5>
                        <input type="text" class="form-control mb-2" name="socialLinks[facebook]"
                            placeholder="Facebook Page URL">
                        <input type="text" class="form-control mb-2" name="socialLinks[instagram]"
                            placeholder="Instagram Handle">
                        <input type="text" class="form-control mb-2" name="socialLinks[linkedin]"
                            placeholder="LinkedIn URL">

                        <h5 class="mt-4">Ad Accounts</h5>
                        <input type="text" class="form-control mb-2" name="adAccounts[metaBusinessManagerId]"
                            placeholder="Meta Business Manager ID">
                        <input type="text" class="form-control mb-2" name="adAccounts[googleAdsCustomerId]"
                            placeholder="Google Ads Customer ID">
                        <input type="text" class="form-control mb-2" name="adAccounts[googleAnalyticsId]"
                            placeholder="Google Analytics ID">

                        <h5 class="mt-4">Contact Person</h5>
                        <input type="text" class="form-control mb-2" name="contactPerson[name]" placeholder="Name">
                        <input type="email" class="form-control mb-2" name="contactPerson[email]" placeholder="Email">
                        <input type="text" class="form-control mb-3" name="contactPerson[phone]" placeholder="Phone">

                        <!-- SECTION 2: Strategy Form -->
                        <h4 class="text-success mt-5 mb-3">ðŸ“ˆ Marketing Strategy Questions</h4>

                        <div class="mb-3">
                            <label class="form-label">1. Total active sales period on your website?</label>
                            <input type="text" class="form-control" name="strategy[activeSalesPeriod]">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">2. How many digital marketing companies have you worked
                                with?</label>
                            <input type="text" class="form-control" name="strategy[previousAgenciesCount]">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">3. Have you run ads before? Which platforms?</label>
                            <input type="text" class="form-control" name="strategy[adPlatformsUsed]">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">4. How often are new products/collections uploaded?</label>
                            <input type="text" class="form-control" name="strategy[uploadFrequency]">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">5. Months with the best sales?</label>
                            <input type="text" class="form-control" name="strategy[bestSalesMonths]">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">6. High-season and low-season details (if any)?</label>
                            <textarea class="form-control" name="strategy[seasonDetails]" rows="2"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">7. Top 3 regions with most sales (online + in-store)?</label>
                            <input type="text" class="form-control" name="strategy[topSalesRegions]">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">8. Where do you want to sell more (countries/cities)?</label>
                            <input type="text" class="form-control" name="strategy[targetRegions]">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">9. Do you use discount coupons?</label>
                            <select class="form-select" name="strategy[usesDiscountCoupons]">
                                <option value="">Select</option>
                                <option value="yes">Yes</option>
                                <option value="no">No</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">10. Is email marketing actively used?</label>
                            <select class="form-select" name="strategy[emailMarketing]">
                                <option value="">Select</option>
                                <option value="yes">Yes</option>
                                <option value="no">No</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">11. Have bot followers been purchased on Instagram?</label>
                            <select class="form-select" name="strategy[botFollowersInstagram]">
                                <option value="">Select</option>
                                <option value="yes">Yes</option>
                                <option value="no">No</option>
                                <option value="not_sure">Not Sure</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">12. Do you follow competitor and market price research?</label>
                            <select class="form-select" name="strategy[competitorResearch]">
                                <option value="">Select</option>
                                <option value="yes">Yes</option>
                                <option value="no">No</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">13. List at least 3 competitors:</label>
                            <input type="text" class="form-control" name="strategy[competitors]">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">14. List at least 2 industry leaders:</label>
                            <input type="text" class="form-control" name="strategy[industryLeaders]">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">15. Price comparison with competitors?</label>
                            <select class="form-select" name="strategy[priceComparison]">
                                <option value="">Select</option>
                                <option value="cheaper">More affordable</option>
                                <option value="similar">About the same</option>
                                <option value="expensive">More expensive</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">16. Estimated monthly ad budget?</label>
                            <input type="text" class="form-control" name="strategy[monthlyAdBudget]">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">17. Known website issues?</label>
                            <textarea class="form-control" name="strategy[knownWebsiteIssues]" rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">18. Admin panel login (for analytics reports):</label>
                            <textarea class="form-control" name="strategy[adminAccessInfo]" rows="3"></textarea>
                        </div>

                        <button type="submit" class="btn btn-success mt-4">Submit</button>
                    </form>
                </div>
            </main>



        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sidebar toggle for mobile
        document.getElementById('sidebarToggle').addEventListener('click', () => {
            const sidebar = document.getElementById('sidebarMenu');
            sidebar.classList.toggle('show');
        });
    </script>
</body>

</html>